@{
}
@model IEnumerable<string>

@*Heading*@
<h1>Team: @(ViewBag.SelectedType == null ? "Full Roster" : ViewBag.SelectedType)</h1>

<a asp-controller="Home" asp-action="Index" asp-route-team="" class="btn @(ViewBag.SelectedType == null ? "btn-primary" : "btn-outline-secondary")">Home</a>


@*Teams as filters*@

@foreach (string t in Model)
{
    <a asp-controller="Home" asp-action="Index" asp-route-team="@t"
       class="btn @(ViewBag.SelectedType == t ? "btn-primary" : "btn-outline-secondary")">@t</a>
}